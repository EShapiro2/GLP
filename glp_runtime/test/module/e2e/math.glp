%% test/modules/e2e/math.glp
%% Math module for end-to-end testing

-module(math).
-export([factorial/2, double/2, add/3]).

%% factorial(N, F) - F = N!
factorial(0, 1).
factorial(N, F) :- N? > 0 |
    N1 := N? - 1,
    factorial(N1?, F1),
    F := N? * F1?.

%% double(X, Y) - Y = X * 2
double(X, Y) :- otherwise | Y := X? * 2.

%% add(A, B, R) - R = A + B
add(A, B, R) :- otherwise | R := A? + B?.
