% list_rules.glp - List rules as clause/2 facts for meta-interpreter
-module(list_rules).
-export([clause/2]).

% Facts for length/2
clause(length([], 0), true).
clause(length([a], 1), true).
clause(length([a,b], 2), true).
clause(length([a,b,c], 3), true).

% Facts for member/2
clause(member(a, [a,b,c]), true).
clause(member(b, [a,b,c]), true).
clause(member(c, [a,b,c]), true).

% Facts for append/3
clause(append([], [1,2], [1,2]), true).
clause(append([a], [b], [a,b]), true).
clause(append([1,2], [3], [1,2,3]), true).
