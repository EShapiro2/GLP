%% binary_tree.glp - Defining binary trees (AoP 3.23)
%% binary_tree(Tree) :- Tree is a binary tree.

binary_tree(void).
binary_tree(tree(_, Left, Right)) :- binary_tree(Left?), binary_tree(Right?).

%% reduce clauses for metainterpreter
reduce(binary_tree(void), true).
reduce(binary_tree(tree(_, Left, Right)), (binary_tree(Left?), binary_tree(Right?))).
