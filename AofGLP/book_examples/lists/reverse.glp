%% reverse.glp - List reversal: naive vs accumulator
%% Section: Streams - List Reversal

% Naive reverse - O(nÂ²)
reverse_naive([], []).
reverse_naive([X|Xs], Ys?) :-
    reverse_naive(Xs?, Zs),
    append(Zs?, [X?], Ys).

append([], Ys, Ys?).
append([X|Xs], Ys, [X?|Zs?]) :- append(Xs?, Ys?, Zs).

% Accumulator reverse - O(n)
reverse(Xs, Ys?) :- reverse_acc(Xs?, [], Ys).

reverse_acc([], Acc, Acc?).
reverse_acc([X|Xs], Acc, Ys?) :- reverse_acc(Xs?, [X?|Acc?], Ys).
